body
  cursor url('~@/assets/static/cur_normal.cur'), default
  background #000
  margin 0
  user-select none

img
  -webkit-user-drag none

.fade-enter-active, .fade-leave-active
  transition opacity 0.3s

.fade-enter-from, .fade-leave-to
  opacity 0

.fade-enter-to, .fade-leave-from
  opacity 1

@keyframes twinkle
  from
    opacity 1
  to
    opacity 0